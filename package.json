{
  "name": "poka",
  "version": "0.0.0",
  "scripts": {
    "build": "npm-run-all -l -p typecheck build:ui build:server",
    "build:server": "esbuild server.ts --bundle --format=esm --platform=node --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=server.mjs",
    "build:ui": "vite build",
    "dev": "vite --open",
    "dev:server": "NODE_ENV=dev tsx watch server.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path <(cat .eslintignore;cat .gitignore)",
    "postinstall": "rm -rf ./node_modules/@types/react",
    "prepare": "husky install",
    "serve": "npm-run-all -l -p dev:server dev",
    "serve:build": "node server.mjs",
    "serve:storybook": "storybook dev -p 6006 -h localhost",
    "test": "vitest run",
    "test:server": "vitest run server/*",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/static": "^6.10.2",
    "@unocss/reset": "^0.54.1",
    "@vueuse/core": "^10.2.1",
    "fastify": "^4.19.2",
    "floating-vue": "2.0.0-beta.24",
    "pinia": "^2.1.4",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "vue": "^3.3.4",
    "vue-i18n": "9.2.2",
    "vue-router": "^4.2.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@iconify-json/fluent": "^1.1.25",
    "@iconify-json/mdi": "^1.1.52",
    "@intlify/unplugin-vue-i18n": "^0.12.1",
    "@pinia/testing": "^0.1.2",
    "@rushstack/eslint-patch": "^1.3.2",
    "@storybook/addon-actions": "7.0.26",
    "@storybook/addon-essentials": "7.0.26",
    "@storybook/addon-links": "7.0.26",
    "@storybook/vue3-vite": "7.0.26",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^7.0.0",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "20.4.0",
    "@types/testing-library__jest-dom": "^5.14.7",
    "@unocss/preset-web-fonts": "^0.53.5",
    "@unocss/transformer-directives": "^0.54.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-c8": "^0.33.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "babel-loader": "^9.1.3",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-vue": "^9.15.1",
    "happy-dom": "^10.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss-nesting": "^12.0.0",
    "prettier": "^3.0.0",
    "storybook": "7.0.26",
    "tsx": "^3.12.7",
    "typescript": "5.1.6",
    "unocss": "0.53.5",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.16.3",
    "unplugin-vue-components": "^0.25.1",
    "unplugin-vue-router": "^0.6.4",
    "vite": "4.4.2",
    "vite-plugin-inspect": "^0.7.32",
    "vite-plugin-mkcert": "^1.16.0",
    "vitest": "^0.33.0",
    "vue-tsc": "1.8.4"
  },
  "pnpm": {
    "overrides": {
      "eslint-plugin-prettier": "^5.0.0-alpha.2"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --cache --fix --ignore-path .eslintignore",
    "*.{css,html,md,yml}": [
      "prettier --cache --write"
    ]
  }
}
