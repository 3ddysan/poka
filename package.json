{
  "name": "poka",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "run-p -l typecheck build:ui build:server",
    "build:server": "esbuild server.ts --bundle --format=esm --platform=node --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=server.mjs",
    "build:ui": "vite build",
    "dev": "run-p --race -l dev:server dev:ui",
    "dev:server": "NODE_ENV=dev tsx watch server.ts",
    "dev:ui": "vite --open",
    "lint": "eslint --fix .",
    "postinstall": "rm -rf ./node_modules/@types/react",
    "storybook": "storybook dev -p 6006 -h localhost",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/static": "^6.12.0",
    "@unocss/reset": "^0.58.2",
    "@vueuse/core": "^10.7.1",
    "fastify": "^4.25.2",
    "floating-vue": "2.0.0-beta.24",
    "pinia": "^2.1.7",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "vue": "^3.4.0",
    "vue-i18n": "9.8.0",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@iconify-json/fluent": "^1.1.45",
    "@iconify-json/mdi": "^1.1.63",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@pinia/testing": "^0.1.3",
    "@rushstack/eslint-patch": "^1.6.1",
    "@storybook/addon-actions": "7.6.6",
    "@storybook/addon-essentials": "7.6.6",
    "@storybook/addon-links": "7.6.6",
    "@storybook/preview-api": "7.6.6",
    "@storybook/test": "^7.6.6",
    "@storybook/vue3": "7.6.6",
    "@storybook/vue3-vite": "7.6.6",
    "@sxzz/eslint-config": "^3.7.6",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/vue": "^8.0.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "20.10.5",
    "@unocss/preset-web-fonts": "^0.58.2",
    "@unocss/transformer-directives": "^0.58.2",
    "@vitejs/plugin-vue": "^5.0.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vue/tsconfig": "^0.5.1",
    "babel-loader": "^9.1.3",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "eslint-plugin-storybook": "^0.6.15",
    "happy-dom": "^12.10.3",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.1",
    "simple-git-hooks": "^2.9.0",
    "storybook": "7.6.6",
    "tsx": "^4.7.0",
    "typescript": "5.3.3",
    "unocss": "0.58.2",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-icons": "^0.18.1",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.7.0",
    "vite": "5.0.10",
    "vite-plugin-inspect": "^0.8.1",
    "vite-plugin-mkcert": "^1.17.1",
    "vitest": "^1.1.0",
    "vue-tsc": "1.8.27"
  },
  "simple-git-hooks": {
    "pre-commit": "PATH=$PATH:~/.volta/bin; pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --cache"
  }
}
