{
  "name": "poka",
  "version": "0.0.0",
  "scripts": {
    "build": "npm-run-all -l -p typecheck build:ui build:server",
    "build:server": "esbuild server.ts --bundle --format=esm --platform=node --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=server.mjs",
    "build:ui": "vite build",
    "dev": "vite --open",
    "dev:server": "NODE_ENV=dev tsx watch server.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path <(cat .eslintignore;cat .gitignore)",
    "postinstall": "rm -rf ./node_modules/@types/react",
    "prepare": "husky install",
    "serve": "npm-run-all -l -p dev:server dev",
    "serve:build": "node server.mjs",
    "serve:storybook": "storybook dev -p 6006 -h localhost",
    "test": "vitest run",
    "test:server": "vitest run server/*",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "upgrade": "taze major -f -w"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/static": "^6.10.1",
    "@vueuse/core": "^10.0.2",
    "fastify": "^4.15.0",
    "floating-vue": "2.0.0-beta.20",
    "pinia": "^2.0.34",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "vue": "^3.2.47",
    "vue-i18n": "9.2.2",
    "vue-router": "^4.1.6",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@iconify-json/fluent": "^1.1.19",
    "@iconify-json/mdi": "^1.1.50",
    "@intlify/unplugin-vue-i18n": "^0.10.0",
    "@pinia/testing": "^0.0.16",
    "@rushstack/eslint-patch": "^1.2.0",
    "@storybook/addon-actions": "7.0.6",
    "@storybook/addon-essentials": "7.0.6",
    "@storybook/addon-links": "7.0.6",
    "@storybook/vue3-vite": "7.0.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^7.0.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "18.15.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "babel-loader": "^9.1.2",
    "esbuild": "^0.17.17",
    "eslint": "^8.38.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-vue": "^9.11.0",
    "happy-dom": "^9.8.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "postcss-nesting": "^11.2.2",
    "prettier": "^2.8.7",
    "storybook": "7.0.6",
    "taze": "^0.9.1",
    "tsx": "^3.12.6",
    "typescript": "~5.0.4",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-icons": "^0.16.1",
    "unplugin-vue-components": "^0.24.1",
    "unplugin-vue-router": "^0.5.5",
    "vite": "4.3.0-beta.8",
    "vite-plugin-inspect": "^0.7.22",
    "vite-plugin-mkcert": "^1.14.0",
    "vite-plugin-windicss": "^1.8.10",
    "vitest": "^0.30.1",
    "vue-tsc": "1.2.0",
    "windicss": "^3.5.6"
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --cache --fix --ignore-path .eslintignore",
    "*.{css,html,md,yml}": [
      "prettier --cache --write"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "@vue/tsconfig@0.1.3": "patches/@vue__tsconfig@0.1.3.patch"
    }
  }
}
