{
  "name": "poka",
  "version": "0.0.0",
  "scripts": {
    "build": "vue-tsc --noEmit && npm-run-all -l -p build:ui build:server",
    "build:server": "esbuild server.ts --bundle --format=esm --platform=node --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=server.mjs",
    "build:storybook": "storybook build",
    "build:ui": "vite build",
    "dev": "vite",
    "dev:server": "NODE_ENV=dev tsx watch server.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path <(cat .eslintignore;cat .gitignore)",
    "postinstall": "rm -rf ./node_modules/@types/react",
    "prepare": "husky install",
    "serve": "npm-run-all -l -p dev:server dev",
    "serve:build": "node server.mjs",
    "serve:storybook": "storybook dev -p 6006 -h localhost",
    "test": "vitest run",
    "test:server": "vitest run server/*",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "upgrade": "taze major -f -w"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/static": "^6.5.0",
    "@vueuse/core": "^9.5.0",
    "fastify": "^4.9.2",
    "pinia": "^2.0.23",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "vue": "^3.2.45",
    "vue-i18n": "9.2.2",
    "vue-router": "^4.1.6",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@iconify-json/mdi": "^1.1.34",
    "@intlify/vite-plugin-vue-i18n": "^6.0.3",
    "@pinia/testing": "^0.0.14",
    "@rushstack/eslint-patch": "^1.2.0",
    "@storybook/addon-actions": "7.0.0-alpha.48",
    "@storybook/addon-essentials": "7.0.0-alpha.48",
    "@storybook/addon-links": "7.0.0-alpha.48",
    "@storybook/addon-storysource": "7.0.0-alpha.48",
    "@storybook/vue3-vite": "7.0.0-alpha.48",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^6.6.1",
    "@types/jsdom": "^20.0.0",
    "@types/node": "18.11.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitest/coverage-c8": "^0.25.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "babel-loader": "^9.1.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.27.0",
    "eslint-plugin-storybook": "^0.6.7",
    "eslint-plugin-vue": "^9.7.0",
    "happy-dom": "^7.7.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "storybook": "7.0.0-alpha.48",
    "taze": "^0.8.3",
    "tsx": "^3.12.0",
    "typescript": "~4.8.4",
    "unplugin-auto-import": "^0.11.4",
    "unplugin-icons": "^0.14.13",
    "unplugin-vue-components": "^0.22.9",
    "unplugin-vue-router": "^0.2.3",
    "vite": "3.2.3",
    "vite-plugin-inspect": "^0.7.7",
    "vite-plugin-mkcert": "^1.10.1",
    "vite-plugin-pwa": "^0.13.3",
    "vite-plugin-windicss": "^1.8.8",
    "vitest": "^0.25.1",
    "vue-loader": "^17.0.1",
    "vue-tsc": "1.0.9",
    "windicss": "^3.5.6"
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --cache --fix --ignore-path .eslintignore",
    "*.{css,html,md,yml}": [
      "prettier --cache --write"
    ]
  }
}
