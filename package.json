{
  "name": "poka",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "run-p -l typecheck build:ui build:server",
    "build:server": "esbuild server.ts --bundle --format=esm --platform=node --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=server.mjs",
    "build:ui": "vite build",
    "dev": "run-p --race -l dev:server dev:ui",
    "dev:server": "NODE_ENV=dev tsx watch server.ts",
    "dev:ui": "vite --open",
    "lint": "eslint --fix .",
    "postinstall": "rm -rf ./node_modules/@types/react",
    "storybook": "storybook dev -p 6006 -h localhost",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.1",
    "@unocss/reset": "^0.58.6",
    "@vueuse/core": "^10.9.0",
    "fastify": "^4.26.2",
    "floating-vue": "5.2.2",
    "pinia": "^2.1.7",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "vue": "^3.4.21",
    "vue-i18n": "9.10.2",
    "vue-router": "^4.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@iconify-json/fluent": "^1.1.50",
    "@iconify-json/mdi": "^1.1.64",
    "@intlify/unplugin-vue-i18n": "^3.0.1",
    "@pinia/testing": "^0.1.3",
    "@rushstack/eslint-patch": "^1.7.2",
    "@storybook/addon-actions": "8.0.0",
    "@storybook/addon-essentials": "8.0.0",
    "@storybook/addon-links": "8.0.0",
    "@storybook/preview-api": "8.0.0",
    "@storybook/test": "8.0.0",
    "@storybook/vue3": "8.0.0",
    "@storybook/vue3-vite": "8.0.0",
    "@sxzz/eslint-config": "^3.8.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/vue": "^8.0.2",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "20.11.28",
    "@unocss/preset-web-fonts": "^0.58.6",
    "@unocss/transformer-directives": "^0.58.6",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.4.0",
    "@vue/tsconfig": "^0.5.1",
    "babel-loader": "^9.1.3",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "happy-dom": "^13.8.6",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "simple-git-hooks": "^2.10.0",
    "storybook": "8.0.0",
    "tsx": "^4.7.1",
    "typescript": "5.4.2",
    "unocss": "0.58.6",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.8.5",
    "vite": "5.1.6",
    "vite-plugin-mkcert": "^1.17.4",
    "vite-plugin-vue-devtools": "^7.0.17",
    "vitest": "^1.4.0",
    "vue-tsc": "2.0.6"
  },
  "simple-git-hooks": {
    "pre-commit": "PATH=$PATH:~/.volta/bin; pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --cache"
  }
}
