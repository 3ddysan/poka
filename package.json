{
  "name": "poka",
  "version": "0.0.0",
  "scripts": {
    "serve": "npm-run-all -l -p server dev",
    "serve:build": "node server.mjs",
    "dev": "vite",
    "build": "vue-tsc --noEmit && npm-run-all -l -p build:ui build:server",
    "build:ui": "vite build",
    "build:server": "esbuild server.ts --bundle --format=esm --platform=node --banner:js=\"import {createRequire} from 'module';const require=createRequire(import.meta.url);\" --outfile=server.mjs",
    "preview": "vite preview --port 5050",
    "test": "vitest run",
    "typecheck": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path <(cat .eslintignore;cat .gitignore)",
    "storybook": "storybook dev -p 6006 -h localhost",
    "server": "NODE_ENV=dev tsx watch server.ts",
    "build-storybook": "storybook build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/cors": "^8.1.0",
    "@fastify/static": "^6.5.0",
    "@vueuse/core": "^9.3.1",
    "fastify": "^4.9.2",
    "pinia": "^2.0.23",
    "pino": "^8.6.1",
    "pino-pretty": "^9.1.1",
    "vue": "^3.2.41",
    "vue-router": "^4.1.5",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@pinia/testing": "^0.0.14",
    "@rushstack/eslint-patch": "^1.2.0",
    "@storybook/addon-actions": "7.0.0-alpha.40",
    "@storybook/addon-essentials": "7.0.0-alpha.40",
    "@storybook/addon-links": "7.0.0-alpha.40",
    "@storybook/addon-storysource": "7.0.0-alpha.40",
    "@storybook/vue3-vite": "7.0.0-alpha.40",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^6.6.1",
    "@types/jsdom": "^20.0.0",
    "@types/node": "18.8.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "babel-loader": "^8.2.5",
    "esbuild": "^0.15.12",
    "eslint": "^8.25.0",
    "eslint-plugin-storybook": "^0.6.6",
    "eslint-plugin-vue": "^9.6.0",
    "happy-dom": "^7.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "storybook": "7.0.0-alpha.40",
    "tsx": "^3.10.4",
    "typescript": "~4.8.4",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.8",
    "vite": "3.1.8",
    "vite-plugin-inspect": "^0.7.5",
    "vite-plugin-mkcert": "^1.10.1",
    "vite-plugin-pages": "^0.27.0",
    "vite-plugin-windicss": "^1.8.8",
    "vitest": "^0.24.3",
    "vue-loader": "^17.0.0",
    "vue-tsc": "1.0.8",
    "windicss": "^3.5.6"
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --cache --fix",
    "*": "prettier -w -u"
  }
}
